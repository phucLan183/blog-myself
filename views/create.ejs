<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

<body>
  <!-- Navigation -->
  <%- include('layouts/navbar'); -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create New Post </h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form method="post" enctype="multipart/form-data">
          <% if(error) {%>
          <p><%= error %></p>
          <%}%>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input name="title" required type="text" class="form-control" placeholder="Title" id="title"/>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Content</label>
              <textarea name="content" rows="5" class="form-control" id="content" placeholder="Content"></textarea>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Image</label>
              <input name="image" type="file" class="form-controls" id="image"/>
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Create</button>
        </form>
      </div>
    </div>
  </div>
  <hr>
  <!-- Footer -->
  <%- include('layouts/footer'); -%>
          <!-- Scripts -->
          <%- include('layouts/scripts'); -%>
</body>

</html>